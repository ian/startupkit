{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "strict": false,
    "target": "ESNext",
    "module": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
