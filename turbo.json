{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "packages/**"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "!.next/template/**"
      ]
    },
    "format": {
      "outputs": [
        ".cache/.format"
      ],
      "outputLogs": "new-only"
    },
    "format:fix": {
      "outputs": [
        ".cache/.format"
      ]
    },
    "lint": {
      "outputs": [
        ".cache/.lint"
      ]
    },
    "lint:fix": {
      "outputs": [
        ".cache/.lint"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".cache/tsbuildinfo.json"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}