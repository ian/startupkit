link-workspace-packages=true
legacy-peer-deps=true
# without this, prisma will sometimes not work on serverles functions
# see https://github.com/vercel/next.js/issues/68805#issuecomment-2587717346
public-hoist-pattern[]=*@prisma*
public-hoist-pattern[]=import-in-the-middle
public-hoist-pattern[]=require-in-the-middle
public-hoist-pattern[]=@aws-sdk/client-s3
public-hoist-pattern[]=prettier
public-hoist-pattern[]=libsql
public-hoist-pattern[]=@libsql/*